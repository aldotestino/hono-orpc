{
  "name": "hono-orpc",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "ultracite lint",
    "format": "ultracite format",
    "api": "bun --cwd apps/api dev",
    "web": "bun --cwd apps/web dev",
    "cli": "bun --cwd apps/cli start",
    "build": "bun run --cwd apps/web build",
    "start": "bun run --cwd apps/api start",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:push": "bun run --cwd packages/db db:push",
    "db:studio": "bun run --cwd packages/db db:studio",
    "db:visualizer": "bun run --cwd packages/db db:visualizer"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/bun": "latest",
    "ultracite": "5.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "zod": "^4.1.5"
  }
}
